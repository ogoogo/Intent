<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="画面遷移"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/intentButton" android:layout_gravity="center"
                android:layout_weight="1" android:textSize="24sp"/>
        <Button
                android:text="プレイストア"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/playStoreButton" android:layout_gravity="center"
                android:layout_weight="1" android:textSize="24sp"/>
        <Button
                android:text="地図"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mapButton" android:layout_gravity="center"
                android:layout_weight="1" android:textSize="24sp"/>
        <Button
                android:text="ブラウザ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/browserButton" android:layout_gravity="center"
                android:layout_weight="1" android:textSize="24sp"/>
        <Button
                android:text="ギャラリー"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gallerlyButton" android:layout_weight="1"
                android:layout_gravity="center" android:textSize="24sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageView" android:layout_weight="7"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>